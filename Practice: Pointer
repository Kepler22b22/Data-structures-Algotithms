
#include <iostream>
#include<stdio.h>           // Used for C++
#include<stdlib.h>          // Used for C
using namespace std;

int main()
{
    int *p;
    p = new int[5];     // C++ uses "new" to get a new object, to attach Heap memory; if A is an array, don't need a "&", cause array is an address
    
    p[0]=10; p[1]=15; p[2]=14; p[3]=21; p[4]=31;
    
    for (int i=0; i<5; i++)
    cout<<p[i]<<endl;
    
    delete [ ] p;         // C++ uses delete; better clear the memory
    %free(p);             // C uses free
    
    return 0;
}
