
#include <iostream>
using namespace std;

double e(int x, int n)
{
    static double p=1, f=1;       // 需要借助静态变量
    double r;
    if(n==0)
        return 1;
    else
    {
        r = e(x, n-1);
        p = p * x;
        f = f * n;
        return r + p/f;           // 1 + x/1 + x*x/1*2 + x*x*x/1*2*3 + x*x*x*x/1*2*3*4 
    }
}

int main()
{
    cout<<e(3, 10)<<endl;   
    return 0;
}
